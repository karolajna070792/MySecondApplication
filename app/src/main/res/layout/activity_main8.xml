<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.karolina.mysecondapplication.Main4Activity">


    <TextView android:text="Pytanie3: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Question_am8"
        android:textColor="#872732"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:maxLength="50"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kiedy powstał Zamek Czocha?"
        android:id="@+id/Question1_am8"
        android:layout_below="@+id/Question_am8"
        android:textColor="#cb4655"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_am8"
        android:scaleType="fitStart"
        android:src="@drawable/thirdimage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W latach 1241 - 1247"
        android:id="@+id/button_am8"
        android:layout_alignBottom="@+id/imageView_am8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Na początku XVII wieku"
        android:id="@+id/button2_am8"
        android:layout_alignBottom="@+id/imageView_am8"
        android:layout_alignStart="@+id/button_am8"
        android:layout_marginBottom="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Na przełomie XVIII i XIX wieku"
        android:id="@+id/button3_am8"
        android:layout_alignBottom="@+id/imageView_am8"
        android:layout_alignStart="@+id/button2_am8"
        android:layout_marginBottom="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />


<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nastepna odpowiedz"
        android:id="@+id/button4_am8"
        android:textStyle="bold"
        android:background="#dd5375"
        android:gravity="center"
        android:textSize="12dp"
        android:paddingLeft="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView_am8" />

</RelativeLayout>
