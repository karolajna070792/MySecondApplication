<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/imageView1"
    android:visibility="visible">

    <TextView android:text="Pytanie1: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Question_am6"
        android:textColor="#872732"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:maxLength="50"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jaki obiekt przedstawiony jest na obrazku?"
        android:id="@+id/Question1_am6"
        android:layout_below="@+id/Question_am6"
        android:textColor="#cb4655"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2_am6"
        android:src="@drawable/imageone"
        android:scaleType="fitStart"
        android:layout_below="@+id/Question1_am6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zamek Czocha"
        android:id="@+id/zamek_czocha_btn"
        android:layout_alignBottom="@+id/imageView2_am6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zamek Książ"
        android:id="@+id/zamek_ksiaz_btn"
        android:layout_alignBottom="@+id/imageView2_am6"
        android:layout_alignEnd="@+id/zamek_czocha_btn"
        android:layout_marginBottom="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pałac Moszna"
        android:id="@+id/palac_moszna_btn"
        android:layout_alignBottom="@+id/imageView2_am6"
        android:layout_alignStart="@+id/zamek_ksiaz_btn"
        android:layout_marginBottom="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nastepna odpowiedz"
        android:id="@+id/nastepna_odp_btn"
        android:textStyle="bold"
        android:background="#dd5375"
        android:gravity="center"
        android:textSize="12dp"
        android:paddingLeft="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView2_am6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="wybrana"
        android:id="@+id/wybrana"
        android:layout_alignBottom="@+id/zamek_czocha_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/zamek_czocha_btn"
        android:layout_alignRight="@+id/Question_am6"
        android:visibility="visible"
        android:width="50dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#e81414"
        android:singleLine="false"
        android:nestedScrollingEnabled="false"
        android:inputType="text"
        android:focusableInTouchMode="true" />


</RelativeLayout>
